<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:id="@+id/cont_scanner">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_44sdp"
        android:background="@drawable/bg_circle_dark_gray"
        android:padding="16dp"
        android:scaleType="fitCenter"
        android:gravity="center_vertical"
        android:src="@drawable/ico_back" />

    <TextView
        android:id="@+id/scanner_head"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_70sdp"
        android:text="@string/scanner_head_text"
        android:gravity="center_vertical"
        android:textSize="@dimen/_16ssp"
        android:textColor="@android:color/black"/>

    <SurfaceView
        android:id="@+id/cameraPreview"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <irongate.checkpot.view.screens.player.complain.AimView
        android:id="@+id/aimView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_100sdp"
        >

    </irongate.checkpot.view.screens.player.complain.AimView>

    <Button
        android:id="@+id/btn_manual"
        fontPath="futura_pt_book.ttf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_32sdp"
        android:layout_marginRight="@dimen/_32sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:background="@drawable/bg_btn_green_36"
        android:text="@string/scanner_button"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:visibility="visible"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"/>

</RelativeLayout>