<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cont_raffle_card_not_yet"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_310sdp"
    android:layout_marginBottom="@dimen/_20sdp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp">


    <ImageView
        android:id="@+id/shadow_raffle_carf_not_yet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_6sdp"
        android:scaleType="fitXY"
        app:srcCompat="@android:drawable/dialog_holo_light_frame" />

    <ImageView
        android:id="@+id/bg_raffle_card_not_yet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg_panel_5" />

    <ImageView
        android:id="@+id/img_raffle_card_not_yet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:srcCompat="@drawable/img_not_yet" />

    <TextView
        android:id="@+id/txt_raffle_card_not_yet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_180sdp"
        android:gravity="center"
        android:text="@string/card_not_yet_title_player"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_20ssp" />

    <Button
        android:id="@+id/btn_raffle_card_not_yet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_24sdp"
        android:layout_marginRight="@dimen/_24sdp"
        android:background="@drawable/bg_btn_green_36"
        android:text="@string/card_not_yet_btn_player"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_16ssp" />

</RelativeLayout>