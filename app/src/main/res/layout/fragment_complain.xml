<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cont_complain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueBg"
    android:focusableInTouchMode="true">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg_default" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_complain_back"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="53dp"
                android:background="@drawable/bg_circle_green"
                android:padding="17dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ico_back" />

            <TextView
                android:id="@+id/txt_complain_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="115dp"
                android:text="@string/complain_tile"
                android:textColor="@android:color/black"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/txt_complain_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="180dp"
                android:text="@string/complain_choose"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <RelativeLayout
                android:id="@+id/shadow_complain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="252dp"
                android:background="@android:drawable/dialog_holo_light_frame">

                <RelativeLayout
                    android:id="@+id/panel_complain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_panel_5">

                    <ListView
                        android:id="@+id/list_complain"
                        android:layout_width="match_parent"
                        android:layout_height="475dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp" />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>