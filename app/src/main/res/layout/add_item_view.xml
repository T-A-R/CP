<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/adds_target" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toEndOf="@+id/img_add"
            android:layout_toRightOf="@+id/img_add"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_add"
                fontPath="futura_pt_medium.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:maxWidth="@dimen/_200sdp"
                android:text="@string/tariff_target_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_15ssp"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/txt_add_price"
                fontPath="futura_pt_medium.ttf"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:text="@string/tariff_target_price"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_12ssp"
                tools:ignore="MissingPrefix" />

        </LinearLayout>



    </RelativeLayout>

</LinearLayout>