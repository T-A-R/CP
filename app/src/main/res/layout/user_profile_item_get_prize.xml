<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:paddingRight="15dp"
            android:src="@drawable/ico_profile"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/winner_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@android:color/black"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12dp"
                app:autoSizeMaxTextSize="22dp"
                app:autoSizeStepGranularity="2sp"
                android:maxLines="1"
                fontPath="futura_pt_book.ttf"
                tools:ignore="MissingPrefix"
                android:text="Name FamilyName"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/winner_id_def"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="id: "
                    android:textSize="18dp"
                    fontPath="futura_pt_book.ttf"
                    tools:ignore="MissingPrefix"/>

                <TextView
                    android:id="@+id/winner_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    fontPath="futura_pt_book.ttf"
                    tools:ignore="MissingPrefix"/>
            </LinearLayout>

            <TextView
                android:id="@+id/winner_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fontPath="futura_pt_book.ttf"
                tools:ignore="MissingPrefix"
                android:text="https://vk.com/id000000000"
                android:textColor="@color/blue"
                android:textSize="@dimen/_11ssp"/>

            <TextView
                android:id="@+id/raffle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                fontPath="futura_pt_book.ttf"
                tools:ignore="MissingPrefix"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>