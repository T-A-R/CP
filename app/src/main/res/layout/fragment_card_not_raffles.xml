<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cont_no_raffle_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/bg_solid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg_gray_15" />

    <ImageView
        android:id="@+id/bg_raffle_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:tint="#c1000000" />

    <TextView
        android:id="@+id/title"
        fontPath="futura_pt_book.ttf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="100dp"
        android:gravity="bottom|center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        tools:ignore="MissingPrefix" />


    <Button
        android:id="@+id/btn_notify"
        fontPath="futura_pt_book.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/bg_btn_yellow_36"
        android:drawableLeft="@drawable/bell"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        android:paddingRight="25dp"
        android:paddingBottom="15dp"
        android:text="@string/notify_on_new"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:ignore="MissingPrefix" />


</RelativeLayout>