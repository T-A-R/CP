<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cont_loser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#395080"
    android:clipChildren="false"
    android:focusableInTouchMode="true">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/bg_loser_sky" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/img_alien"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/anim_alien37" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/bg_loser_tree" />

        <ImageView
            android:id="@+id/img_box"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/anim_box1" />

        <ImageView
            android:id="@+id/img_present"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/anim_present_lost1" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_loser_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:gravity="center"
        android:text="@string/loser_title"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btn_loser"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="77dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/bg_btn_yellow_36"
        android:text="@string/loser_btn"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

</RelativeLayout>