<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cont_complain_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueBg"
    android:focusableInTouchMode="true">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg_default" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_complain_message_back"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="53dp"
                android:background="@drawable/bg_circle_green"
                android:padding="17dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ico_back" />

            <TextView
                android:id="@+id/txt_complain_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="115dp"
                android:text="@string/complain_message_tile"
                android:textColor="@android:color/black"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/txt_complain_message_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="180dp"
                android:text="@string/complain_message_desc"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <RelativeLayout
                android:id="@+id/shadow_complain_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="252dp"
                android:background="@android:drawable/dialog_holo_light_frame">

                <RelativeLayout
                    android:id="@+id/panel_complain_message"
                    android:layout_width="match_parent"
                    android:layout_height="395dp"
                    android:background="@drawable/bg_panel_5">

                    <EditText
                        android:id="@+id/input_complain_message"
                        android:layout_width="match_parent"
                        android:layout_height="217dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="31dp"
                        android:background="@drawable/bg_selector_green"
                        android:ems="10"
                        android:gravity="top"
                        android:hint="@string/complain_message_your"
                        android:inputType="textPersonName"
                        android:padding="16dp"
                        android:textSize="22sp" />

                    <Button
                        android:id="@+id/btn_complain_message"
                        android:layout_width="match_parent"
                        android:layout_height="63dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="288dp"
                        android:background="@drawable/bg_btn_green_36"
                        android:text="@string/to_complain"
                        android:textColor="@android:color/white"
                        android:textSize="22sp" />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>