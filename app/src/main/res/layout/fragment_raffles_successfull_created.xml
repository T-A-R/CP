<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cont"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green">

    <ImageView
        android:id="@+id/ic_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_60sdp"
        android:scaleType="centerCrop"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/bg" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="@dimen/_12sdp"
        android:gravity="center_horizontal"
        android:text="@string/perfect"
        android:textColor="@android:color/white"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal"
        android:text="@string/raffles_created_title"
        android:textColor="@android:color/white"
        android:textSize="16dp" />

    <RelativeLayout
        android:id="@+id/cont_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:layout_below="@id/desc"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/_12sdp"
        >

    </RelativeLayout>

    <Button
        android:id="@+id/btn_instagram"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_above="@+id/txt_raffles"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_37sdp"
        android:layout_marginRight="@dimen/_37sdp"
        android:background="@drawable/bg_btn_yellow_36"
        android:text="@string/btn_go_to_instagram"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_14ssp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_raffles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_37sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginRight="@dimen/_37sdp"
        android:gravity="center"
        android:paddingBottom="@dimen/_18sdp"
        android:text="@string/raffles_created_details"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_16ssp" />

    <RelativeLayout
        android:id="@+id/cont_confetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_100sdp"
        android:clipChildren="false">

    </RelativeLayout>

</RelativeLayout>
