<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueBg"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true">


    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_styleUrl="mapbox://styles/checkpot/cjm24bmto8p3s2snxxxz2v5x3"
        mapbox:mapbox_cameraTargetLat="55.7504694"
        mapbox:mapbox_cameraTargetLng="37.6091848"
        mapbox:mapbox_cameraZoom="10" />

    <RelativeLayout
        android:id="@+id/cont_fragments"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <fragment
        android:id="@+id/fragment_place_events"
        android:name="irongate.checkpot.view.screens.player.map.MapPlaceEventsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <fragment
        android:id="@+id/fragment_list"
        android:name="irongate.checkpot.view.screens.player.map.MapListViewFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <fragment
        android:id="@+id/fragment_buttons"
        android:name="irongate.checkpot.view.screens.player.map.MapButtonsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>