<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/iceBlue"
    android:padding="@dimen/_15sdp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/bg_circle_yellow"
            android:padding="@dimen/_16sdp"
            android:scaleType="fitCenter"
            android:tint="@android:color/black"
            app:srcCompat="@drawable/ico_back" />


        <TextView
            android:id="@+id/tv_data_score"
            fontPath="futura_pt_medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_22sdp"
            android:text="@string/title_score"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_26ssp"
            tools:ignore="MissingPrefix" />

        <LinearLayout
            android:id="@+id/ll_container_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_panel_5"
            android:orientation="vertical">


            <EditText
                android:id="@+id/edit_score"
                fontPath="futura_pt_book.ttf"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_56sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_selector_blue"
                android:ems="10"
                android:hint="@string/info_hint_score"
                android:inputType="number"
                android:maxLength="20"
                android:padding="@dimen/_16sdp"
                android:textSize="@dimen/_18ssp"
                tools:ignore="MissingPrefix" />

            <Button
                android:id="@+id/btn_score"
                fontPath="futura_pt_book.ttf"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:layout_below="@+id/popup_view"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/bg_btn_blue_36"
                android:text="@string/step_four"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18ssp"
                tools:ignore="MissingPrefix" />
        </LinearLayout>

        <irongate.checkpot.view.screens.delegate.companyRegistration.PopupViewSmall
            android:id="@+id/popup_view_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </irongate.checkpot.view.screens.delegate.companyRegistration.PopupViewSmall>
    </LinearLayout>

</ScrollView>