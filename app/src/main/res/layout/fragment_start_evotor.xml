<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg_default" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_circle_yellow"
        android:padding="16dp"
        android:scaleType="fitCenter"
        android:tint="@android:color/black"
        app:srcCompat="@drawable/ico_back"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:gravity="left"
        android:text="@string/contacts_title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_34ssp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_140sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:gravity="left"
        android:text="@string/contacts_desc"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_16ssp"
        android:visibility="visible" />



    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_46sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="@dimen/_90sdp"
        android:background="@drawable/bg_btn_green_36"
        android:text="@string/contacts_btn_player"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <RelativeLayout
        android:id="@+id/cont_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">


    </RelativeLayout>

</RelativeLayout>