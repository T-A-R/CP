<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cont_reg1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg_default"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/cont_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/txt_register1_desc">

                <TextView
                    android:id="@+id/txt_register1_title_reg"
                    fontPath="futura_pt_medium.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/to_register"
                    android:textColor="@android:color/black"
                    android:textSize="34sp"
                    android:visibility="gone"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/txt_register1_title_enter"
                    fontPath="futura_pt_medium.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/to_enter"
                    android:textColor="@android:color/black"
                    android:textSize="60sp"
                    android:visibility="gone"
                    tools:ignore="MissingPrefix" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_register1_desc"
                fontPath="futura_pt_book.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txt_register1_title_phone"
                android:gravity="center"
                android:text="@string/register1_desc"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:visibility="gone"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/txt_register1_title_phone"
                fontPath="futura_pt_book.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/input_register1"
                android:layout_marginStart="37dp"
                android:layout_marginLeft="37dp"
                android:layout_marginBottom="5dp"
                android:text="@string/register1_title_phone"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp"
                tools:ignore="MissingPrefix" />

            <!--<br.com.sapereaude.maskedEditText.MaskedEditText-->
                <!--android:id="@+id/input_register1"-->
                <!--fontPath="futura_pt_book.ttf"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="63dp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginLeft="34dp"-->
                <!--android:layout_marginRight="34dp"-->
                <!--android:background="@drawable/bg_selector_green"-->
                <!--android:ems="10"-->
                <!--android:hint="@string/register1_hint_phone"-->
                <!--android:inputType="number"-->
                <!--android:padding="16dp"-->
                <!--android:textSize="22sp"-->
                <!--android:keepScreenOn="true"-->
                <!--app:keep_hint="true"-->
                <!--mask:allowed_chars="1234567890"-->
                <!--mask:mask="+7(###)###-##-##"-->
                <!--tools:ignore="MissingPrefix" />-->

            <EditText
                android:id="@+id/input_register1"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp"
                android:background="@drawable/bg_selector_green"
                android:ems="10"
                android:hint="+7(123)456-78-90"
                android:maxLength="16"
                android:inputType="number"
                android:padding="16dp"
                android:textSize="22sp"/>

            <Button
                android:id="@+id/btn_register1"
                fontPath="futura_pt_book.ttf"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_btn_green_36"
                android:text="@string/register1_btn_sendsms"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:visibility="visible"
                tools:ignore="MissingPrefix" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_register1_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="@string/register1_timer_hint"
                android:textSize="22sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_register1_cant"
                fontPath="futura_pt_book.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/register1_txt_cant_enter"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                tools:ignore="MissingPrefix" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>