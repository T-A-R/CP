<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg_default" />

    <TextView
        android:id="@+id/txt_register_cant_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="@string/register_cant_title"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_register_cant_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="@string/register1_desc"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_register_cant"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="41dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/bg_btn_green_36"
        android:text="@string/register_cant_btn"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="250dp"
        app:srcCompat="@drawable/bg_circle_blue"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/img2"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_below="@+id/img1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="250dp"
        app:srcCompat="@drawable/bg_circle_blue" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_below="@+id/img2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="31dp"
        app:srcCompat="@drawable/bg_circle_blue" />

    <ImageView
        android:id="@+id/img_register_cant_ico1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_below="@+id/img1"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="-32dp"
        app:srcCompat="@drawable/ico_cant_phone"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/img_register_cant_ico2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_below="@+id/img2"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="-32dp"
        app:srcCompat="@drawable/ico_cant_mail" />

    <ImageView
        android:id="@+id/img_register_cant_ico3"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_below="@+id/img3"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="-32dp"
        app:srcCompat="@drawable/ico_cant_teleg" />

    <TextView
        android:id="@+id/txt_register_cant_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img1"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="-46dp"
        android:text="@string/register_cant_phone"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_register_cant_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img2"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="-46dp"
        android:text="@string/register_cant_mail"
        android:textColor="@android:color/black"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/txt_register_cant_teleg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img3"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="-46dp"
        android:text="@string/register_cant_telegram"
        android:textColor="@android:color/black"
        android:textSize="32sp" />

</RelativeLayout>