<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">


    <RelativeLayout
        android:id="@+id/cont_list_raffles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F9FF"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_map_raffles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="180dp"
            android:layout_marginBottom="75dp"
            android:orientation="horizontal">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="44dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_panel_15"
        android:elevation="5dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/txt_variants"
            fontPath="futura_pt_book.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/map_player_menu_rozygryshi"
            android:textColor="@android:color/black"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/btn_map"
            fontPath="futura_pt_book.ttf"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_btn_green_22"
            android:padding="10dp"
            android:text="@string/map_btn_map"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/btn_list"
            fontPath="futura_pt_book.ttf"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_btn_green_22"
            android:padding="10dp"
            android:text="@string/map_btn_list"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            tools:ignore="MissingPrefix" />

    </RelativeLayout>

</RelativeLayout>